<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>internarbeidsflatedecorator</display-name>

    <filter>
        <filter-name>GZip</filter-name>
        <filter-class>no.nav.sbl.dialogarena.common.web.filter.GZIPFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>GZip</filter-name>
        <url-pattern>*.js</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>selftest</servlet-name>
        <servlet-class>no.nav.sbl.internarbeidsflatedecorator.SelftestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selftest</servlet-name>
        <url-pattern>/internal/selftest</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>isAliveServlet</servlet-name>
        <servlet-class>no.nav.sbl.internarbeidsflatedecorator.IsAliveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>isAliveServlet</servlet-name>
        <url-pattern>/internal/isAlive</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <mime-mapping>
        <extension>html</extension>
        <mime-type>text/html;charset=UTF-8</mime-type>
    </mime-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/index.html</location>
    </error-page>
</web-app>
